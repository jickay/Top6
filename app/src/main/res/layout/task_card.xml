<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/task_num"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:text="3"
                    android:textSize="36dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/task_date" />

                <TextView
                    android:id="@+id/task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Date"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_above="@+id/task_urgency"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/task_title"
                    android:layout_toStartOf="@+id/task_title" />

                <TextView
                    android:id="@+id/task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Title"
                    android:textSize="21dp"
                    android:maxLines="2"
                    android:gravity="left|center"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/task_num"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/task_date" />

                <ProgressBar
                    android:id="@+id/task_urgency"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="@color/progressBarForeground"
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

        </RelativeLayout>

</android.support.v7.widget.CardView>